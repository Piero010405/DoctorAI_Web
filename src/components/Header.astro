---
import Button from "./Button.astro"
import Logo from "./Logo.astro"
import NavBarItems from "./NavBarItems.astro"
---
<nav class="bg-black/85 backdrop-filter backdrop-blur-lg shadow-lg border-b border-white/10 w-full fixed z-50">
    <div class="mx-auto px-2 sm:px-6 lg:px-32">
        <div class="relative flex h-16 items-center justify-between">
          <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start space-x-10">
            <div class="flex flex-shrink-0 items-center">
              <Logo />
            </div>
            <div class="hidden sm:ml-6 sm:block">
              <div class="flex space-x-10 items-center mt-1">
                <NavBarItems title="Inicio" url="#inicio" />
                <NavBarItems title="Servicios" url="#services" />
                <NavBarItems title="Precios" url="#princing" />
              </div>
            </div>
          </div>
            <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
                <Button title="Descargar" href=""/>
            </div>
        </div>
    </div>
</nav>
  