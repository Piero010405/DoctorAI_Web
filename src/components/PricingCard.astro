---
interface Props {
    plan: string;
    descripcion: string;
    precio: string;
    features: string[]
}

const { plan, descripcion, precio, features } = Astro.props;

import Check from "./Check.astro";
---
<div class="flex flex-col p-6 mx-auto max-w-lg text-center rounded-lg border border-gray-600 xl:p-8 bg-black/10 backdrop-filter backdrop-blur-lg text-white shadow-lg">
    <h3 class="mb-4 text-2xl font-semibold">{plan}</h3>
    <p class="font-light sm:text-lg text-gray-400">{descripcion}</p>
    <div class="flex justify-center items-baseline my-8">
        <span class="mr-2 text-5xl font-extrabold">${precio}</span>
        <span class="text-gray-400">/mes</span>
    </div>
    <!-- List -->
    <ul role="list" class="mb-8 space-y-4 text-left">
        {features.map((item) => (
             <li class="flex items-center space-x-3">
            <Check />
            <span>{item}</span>
        </li>
          ))}
    </ul>
    <a href="#" class="bg-[#1fe9e9] hover:bg-[#0fc2c2] font-medium rounded-lg text-sm px-5 py-2.5 text-center text-white ease-in-out duration-150">Empezar</a>
</div>